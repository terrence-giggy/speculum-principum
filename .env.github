# GitHub Actions Environment Configuration for Speculum Principis

# Database Configuration
DATABASE_URL=sqlite:///speculum_data.db

# Analysis Configuration
RELEVANCE_THRESHOLD=0.6
MONITOR_INTERVAL=360  # 6 hours in minutes

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Source Configuration (examples)
# Add your RSS feeds and sources here
RSS_SOURCES=https://rss.cnn.com/rss/edition.rss,https://feeds.feedburner.com/TechCrunch

# AI/NLP Configuration
# Use smaller models for GitHub Actions to save time/resources
MODEL_NAME=distilbert-base-uncased
USE_GPU=false
MAX_CONTENT_LENGTH=5000

# Performance Configuration
MAX_WORKERS=2
TIMEOUT_SECONDS=300
CACHE_ENABLED=true

# GitHub Actions specific settings
GITHUB_ACTIONS=true
CI=true
PYTHONUNBUFFERED=1